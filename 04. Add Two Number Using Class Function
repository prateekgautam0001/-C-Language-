#include<iostream>
using namespace std;
class Addition
{ public:
      int num1,num2,sum;
      public:
      void input()
      {
          cout<<"Enter The Number:";
          cin>>num1>>num2;
      }
      void calculator() {
        sum = num1+num2;
      }
      void output() {
        cout<< "The sum is "<<num1<<" and "<<num2<<" is "<<sum<< endl;
      }
};
      int main(){
        Addition add;
        add.input();
        add.calculator();
        add.output();
        return 0;
      }
