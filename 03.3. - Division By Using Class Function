#include<iostream>
using namespace std;
class Division
{ public:
      int num1,num2,sum;
      public:
      void input()
      {
          cout<<"Enter The Number:";
          cin>>num1>>num2;
      }
      void calculator() {
        sum = num1%num2;
      }
      void output() {
        cout<< "The sum is "<<num1<<" and "<<num2<<" is "<<sum<< endl;
      }
};
      int main(){
        Division div;
        div.input();
        div.calculator();
        div.output();
        return 0;
      }
